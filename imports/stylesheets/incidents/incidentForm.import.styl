#add-incident
  margin-top 35px
  overflow-x hidden
  +above(4)
    overflow-x visible
    margin-top 0
  .tab-content
    clear both
    @extend .modal-block
    border-top 0
  input
    &[type=number]
      max-width 200px

  .form-group
    &.incident--dates
      margin-right -35px
      margin-left -35px
      margin-top 20px
      margin-bottom 15px
    &.check-buttons
      &.has-error
        background lighten($danger, 95%)
        border-top 1px solid lighten($danger, 70%)
        border-bottom 1px solid lighten($danger, 70%)
  .incident-snippet
    padding-top 1em
    padding-bottom 1em

  .control-label
    &.featured
      border-top-width 2px
      width 100%
      +above(4)
        border-top-width 0
        margin-left -20px
        margin-right -20px

.other-metadata
  ul
    margin-right 1em
    padding-right 1em
    border-right 1px solid $border-primary
    &:last-of-type
      border 0

.incident--dates
  margin-left -35px
  margin-right -35px
  padding 0 15px

.add-incident--wrapper
  .form-group
    &:first-of-type
      border-top 0
