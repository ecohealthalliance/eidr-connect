@import 'eventFiltration.import'

.event--content-wrapper
  border-top 1px solid $event-nav-border
  flex 1

.event--content-container
  position relative
  flex 1
  .no-results
    font-size 135%
    position absolute
    top 3em
    left 50%
    transform translate(-50%, 0)
    color $primary
    &.modal-layer
      z-index $modal-layer + 1
  .veil
    &.modal-layer
      z-index $modal-layer

.event--content
  section
    padding 1em

.event--incidents
  flex-direction column
  .flex-col
    border-right-width 0
  +above($break-point--large-width)
    flex-direction row
    > div
      min-width 50%
    .flex-col
      border-right-width 1px
