.event--filtration
  +above(4)
    min-width 300px
  border-right 1px solid $border-primary
  position relative

.filtration--property
  padding 1em $page-padding
  border-bottom 1px solid darken($border-primary-light, 1%)
  &.disabled
    opacity .5
    pointer-events none
  h3
    font-size 1em
  label
    text-transform capitalize
  .check-buttons
    flex-wrap wrap
  .daterange-wrapper
    display flex
    align-items center
    justify-content center
    margin-top 1em
    margin-bottom 0
    .daterange
      width 60%
      min-width 250px
      position relative
      margin-bottom .5em
    i
      font-size 110%
      position absolute
      right 10px
      top 50%
      transform translate(0, -50%)
      pointer-events none
    input
      padding-right 35px
    .dropdown-menu
      z-index $cosmos-layer
      border-top 0

  &.locations
    .actions
      display flex
      justify-content flex-end
      a
        padding 0 .2em
        font-size .9em
        &:first-of-type
          padding-right .5em
          border-right 1px solid $border-primary
        &:last-of-type
          padding-left .5em

  .location-list--wrapper
    gradientTopAndBottom()
    position relative

  .location-list
    max-height 25vh
    overflow-x scroll
    padding .75em .5em 1em .5em
    margin-bottom .25em
    li
      display flex
      align-items baseline
      padding-top .25em
      padding-bottom .25em
      cursor pointer
      i
        margin-right .35em
      &:hover
        color $primary-dark
      &:active
        i
          transform scale(1.3)
          transition .1s translate

.filtration--header
  display flex
  align-items center
  max-height $pane-head-height
  background $border-primary-light
  border-bottom 1px solid $border-primary
  padding 1em $page-padding
  button
    padding .35em .75em
    font-size 85%
    text-transform uppercase
    transition .2s
    line-height 1
  h2
    font-size 1.3em
    font-weight 500

.event--filtration-picker
  boxShadow()
  margin-top 2px
  padding .75em .75em 0 .75em
  border 1px solid lighten($border-primary, 20%)
  .calendar
    margin-bottom 1em
  .calendar-table
    border 0
  .ranges
    float none
    text-align right
  .range_inputs
    margin 1em 0
    button
      &:first-of-type
        margin-right .5em
