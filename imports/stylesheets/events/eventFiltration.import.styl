.event--filtration
  +above(4)
    min-width 300px
  border-right 1px solid $border-primary

.filtration--property
  padding 1em $page-padding
  border-bottom 1px solid darken($border-primary-light, 1%)
  &.disabled
    opacity .5
    pointer-events none
  h3
    font-size 1em
  label
    text-transform capitalize
  .check-buttons
  .dates
    flex-wrap wrap
  .dates
    flex-direction column
    margin-top 1em
    margin-bottom 0
    +above(4)
      flex-direction row
    .date
      flex 1
      display flex
      flex-direction column
      +above(4)
        flex-direction column-reverse
        margin-left .5em
        margin-right .5em
    label
      font-size .9em
      margin-top .25em
      +above(4)
        text-align center
        font-weight 400
        color lighten($primary, 20%)
    input
      margin-bottom .5em

  &.locations
    .actions
      display flex
      justify-content flex-end
      a
        padding 0 .2em
        font-size .9em
        &:first-of-type
          padding-right .5em
          border-right 1px solid $border-primary
        &:last-of-type
          padding-left .5em

  .location-list--wrapper
    gradientTopAndBottom()
    position relative

  .location-list
    max-height 25vh
    overflow-x scroll
    padding .75em .5em 1em .5em
    margin-bottom .25em
    li
      display flex
      align-items baseline
      padding-top .25em
      padding-bottom .25em
      cursor pointer
      i
        margin-right .35em
      &:hover
        color $primary-dark
      &:active
        i
          transform scale(1.3)
          transition .1s translate

.filtration--header
  display flex
  align-items center
  min-height $pane-head-height
  background $border-primary-light
  border-bottom 1px solid $border-primary
  padding 1em $page-padding

  h2
    font-size 1.3em
    font-weight 500
