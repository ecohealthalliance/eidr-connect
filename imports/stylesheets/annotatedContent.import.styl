.source-content--wrapper
  position relative
  height 100%
  > div
    padding 1em 2.5% 3em 2.5%
  +above(4)
    > div
      padding-left 5%
      padding-right 5%

.selectable-content
.annotated-content
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  z-index 1
  padding-bottom 3em
  white-space pre-wrap
  word-wrap break-word
  word-break break-word

.annotated-content
  &
  span
    &::selection
      background transparent
  &:after
    content ''
    display block
    height 3em

.selectable-content
  z-index 2
  color transparent
  &::selection
    color black
    background alpha($selection, 90%)

.annotation-options
  padding 0
  margin 0
  font-size 1.5em
  display flex
  align-items center
  justify-content center
  padding-right .5em
  padding-left .5em
  li
    margin-right 1em
    color desaturate($primary, 10%)
    cursor pointer
    &:last-of-type
      margin-right 0
    &:hover
      transform scale(1.3)
      transform-origin center
      color $secondary
      transition .05s
    &:active
      transform scale(.9)
    &.delete
      &:hover
        color $danger
    &.select
      &.selected
      &:hover
        color $highlight
