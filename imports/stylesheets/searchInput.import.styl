.search-icon
  color $border-primary
  cursor default
  &.toggleable
    cursor pointer
  &.cancel
    color lighten($delete, 10%)
    font-size 1.25em
    transition font-size .1s ease-in-out
    cursor pointer
    &::before
      content '\f057' // fa-times-circle
    &:hover
      color $delete
      font-size 1.45em
    &:active
      color $secondary-dark
  &:focus
    noBootstrapFocus()
    color $secondary-dark

.search-wrapper
  align-self center
  transition .3s
  margin-left auto
  input
    display block
    visibility visible
    opacity 1
    border-radius 3px
    border 1px solid $border-primary
    &:focus
      border-color $primary
  &:not(.stagged)
    .search-icon
      position absolute
      right 10px
      top 50%
      transform translate(0, -50%)
  &.stagged
    input
      display none
      visibility hidden
      opacity 0
    .search-icon
      font-size 1.75em
      color $primary
      &:hover
        color lighten(@color, 50%)
