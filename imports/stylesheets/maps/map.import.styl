.leaflet-container
  background $map-background

#map
  flex 1 1 auto
  font-size 1em
  border-bottom 1px solid $border-primary
  .leaflet-control-scale
  .leaflet-control-attribution
    font-size .75em
  .leaflet-control-attribution
    padding-right 2em
  .leaflet-right
    .leaflet-control
      float none

.map-legend
  position absolute
  left 0
  bottom 1px
  background-color alpha(white, 95%)
  h5
    padding .75em 1em .7em 1em
    margin 0
    background alpha($border-primary-light, 92%)
    border-bottom 1px solid $border-primary
  .values
    display flex
    flex-direction row
    padding 1em
  .value
    display flex
    align-items center
    justify-content center
    min-width 4em
    font-weight 600
    color white
    padding .65em 1em
    text-shadow 1px 1px rgba(0,0,0,.2)
    letter-spacing .04em
    &:first-of-type
      border-top-left-radius 2px
      border-bottom-left-radius 2px
    &:last-of-type
      border-top-right-radius 2px
      border-bottom-right-radius 2px
