.leaflet-container
  background $map-background

#map
  width 100%
  height 100%
  min-height 500px
  font-size 1em
  .leaflet-control-scale
  .leaflet-control-attribution
    font-size .75em
  .leaflet-control-attribution
    padding-right 2em
  .leaflet-right
    .leaflet-control
      float none

.map-legend
  background-color white
  padding 6px
  position absolute
  left 0
  bottom 0
  border 1px solid #eef0f4
  h5
    line-height 2em
    margin 0
    margin-bottom 5px
    padding 0
    color $primary
    border-bottom 1px solid #eef0f4
  .value
    font-weight bold
    margin auto
    height 2em
    width 4em
    color white
    text-align center
    padding 3px
    border-bottom 1px solid white
