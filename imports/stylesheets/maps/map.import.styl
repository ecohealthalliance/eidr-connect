.leaflet-container
  background $map-background

#map
  width 100%
  height 100%
  min-height 500px
  font-size 1em
  .leaflet-control-scale
  .leaflet-control-attribution
    font-size .75em
  .leaflet-control-attribution
    padding-right 2em
  .leaflet-right
    .leaflet-control
      float none

.affected-areas-container
  postion relative
  #legend
    span
      color $primary
      margin-left 5px
    h4
      color $primary-dark
    border 1px solid #c6d1dd;
    position absolute
    right 20px
    top 180px
    background white
    z-index 2
    padding 0 8px
    padding-bottom 8px
