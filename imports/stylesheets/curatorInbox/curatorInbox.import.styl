.curator-inbox--pane
  width 100%
  &:last-of-type
    left 100%
    +below(3)
      transition transform $pane-switch-speed ease-in-out
      &.on-canvas
        transform translate(-100%, 0)
      &.off-canvas
        transform translate(0,0)
  +above($break-point--curator-inbox)
    width $curator-pane-width
    border-right 1px solid $border-primary
    &:last-of-type
      border 0
      left auto

.toggle-source-content
  font-size 1.5em
  color $primary
  cursor pointer
  padding .15em
  margin-top 2px
  &:hover
    color darken(@color, 10%)
  &.active
    color darken($positive, 20%)

.curator-inbox-sources
  +below($break-point--curator-inbox)
    top $mobile-header-height
    transition transform $pane-switch-speed ease-in-out
    transform translate(0, 0)
    &:not(.on-canvas)
      transform translate(-100%, 0)
  +above($break-point--curator-inbox)
    width 35%
    border-right-width 3px
  +above($break-point--BSVE)
    width 25%

.curator-inbox-options
  position relative
  color $primary-light
  display flex
  align-self stretch
  margin-left auto
  &.full-width
    justify-content flex-end
    &
    .search-wrapper
      flex 1
  .option
    margin-right .75em
    display flex
    align-items center
    align-self stretch
    &:last-child
      margin-right 0
    &.small
      font-size 1em
  .spacer
    width 1px
    align-self stretch
    background $border-primary-light
    margin 0 1.5em 0 0
  a
    color $primary
    font-size 1.75em
    +below(4)
      display none
    &:hover
      color lighten(@color, 50%)
  .curator-filter-reviewed-icon
  .curator-filter-calendar-icon
    cursor pointer
    &.active
      color $positive

.curator-filter--search-show
  display flex
  align-items center

.curator-inbox-datepicker
  display none
  margin 1em 0 0
  padding-bottom 2em
  border-bottom 2px solid $border-primary-light
  &.active
    display block
  .inlineRangePicker
    position relative
    margin-bottom 1em
  .daterangepicker
    position static
    display flex
    align-items center
    justify-content center
    flex-wrap wrap
  .calendar
    margin 0 0 1.5em 0
    &:first-of-type
      margin-right 1em
    +above(2)
      margin-bottom 0
    .calendar-table
    .daterangepicker_input
      padding 0
  .btn
    margin-bottom .5em
    width 80%
    margin 0 10% 1em 10%
    +above(2)
      width auto
      margin-left 0
      margin-right .5em
      &:first-of-type
        padding-left 2.5em
        padding-right 2.5em

.curator-inbox-source-list
  .reactive-table-options
    display none

.curator-inbox-buttons
  margin-bottom 30px

.curator-source-details
  display flex
  flex-direction column
  padding 0
  overflow hidden
  +above($break-point--curator-inbox)
    width 65%
  +above($break-point--BSVE)
    width 75%

.curator-source-details--options
  display flex
  align-self stretch
  align-items center
  flex-direction row-reverse
  align-items center
  margin-bottom 1em
  +above($break-point--curator-inbox)
    flex-direction row
    margin-left auto
    margin-bottom 0
  .btn
    transition .3s
    flex 1
    +above($break-point--curator-inbox)
      flex auto

.curator-source-details--content
  flex 1 1 100%
  display flex
  flex-direction column
  max-height calc(100% - 50px)
  +above($break-point--BSVE)
    flex-direction row
  a
    cursor pointer
    color $d-gray
  h3
  h4
    font-weight 400
    margin 0
  h3
    color $primary-dark
    font-size 1.1em
    text-transform uppercase
  h4
    color $d-gray
    font-size 1em
    text-transform uppercase
  .reactive-table-navigation
    padding 0
    +below(2)
      margin-top 1em
  .toggle-reviewed
    background lighten($positive, 90%)
    color $primary-dark
    margin-right auto
    max-width 225px
    +above($break-point--curator-inbox)
      margin-bottom 0
    &:hover
      background darken(@background, 10%)
      color darken(@color, 10%)
    &:focus
      @extend .btn-success
  .reviewed
    min-width 125px
    transition .3s
    background lighten($positive, 30%)
    border-color darken($positive, 50%)
    color $primary-dark
    &::before
    &::after
      display none
      vertical-align middle
    &:before
      content '\f0e2' // fa-undo
      margin-right .25em
      font-family FontAwesome
      font-size .9em
    &::after
      content 'Undo'
    &:hover
      background lighten($delete, 99%)
      border-color $delete
      color darken($delete, 10%)
      &::before
      &::after
        display inline-block
      span
        display none

.curator-source-details--copy-wrapper
  position relative
  +above($break-point--BSVE)
    display flex
    flex-direction column
    border-right 1px solid $border-primary
    &::after
    &::before
      display none

.curator-source-details--copy
  verticalScroll()
  height 30vh
  white-space pre-wrap
  border-top 1px solid $border-primary-light
  +above($break-point--BSVE)
    height auto
    flex 1

.curator-source-details--incidents-wrapper
  flex 1
  display flex
  flex-direction column
  .curator-source-details--incidents-options
    .tabs
      border-top 0

.curator-source-details--incidents-container
  flex 1 1 100%
  verticalScroll()
  padding-bottom 3em

.curator-source-details--copy-wrapper
.curator-source-details--table
  +above($break-point--BSVE)
    flex 1 1 50%
    max-width 50%

.curator-source-details--events
  padding 0
  margin-top -1px
  background lighten($border-primary-light, 80%)
  h5
    margin-top 0
  > ul
    margin-bottom 0

.curator-details-articles
  .open-icon
    margin-right 30px

.curator-events-collapse
  color $primary
  cursor pointer

.suggest-incidents
  font-size .75em
  padding .25em .75em
  margin-right 1em
  background none

#curatorEventsFilter
  position relative
  display block
  input
    float none
    border-radius 4px
    border-color $border-primary
    box-shadow none
    padding-right 2em

.filter-wrapper
  opacity 1
  transition .3s
  margin-right 1em
  min-width 70%
  &.subtle
    opacity .4

.spacer
  display inline
  border-right 1px solid #ddd
  &.dark
    border-color $border-primary
  &.light
    border-color $border-primary-light

.no-curator-events
  color gray
  text-align center
  i
    font-size 5em

.curator-viewing-status
  position absolute
  font-size 1.1em
  left .225em
  color $danger

.curator-inbox-sources--back-to-top
  position absolute
  left 50%
  bottom 15px
  transform translate(-50%, 0)
  z-index $top-layer + 1
  transition transform .2s ease-in-out, opacity .2s
  opacity 1
  transform-origin center
  &:not(.off-canvas)
    transition transform .2s ease-in-out, opacity .2s
  &.off-canvas
    transition transform .2s ease-in-out, opacity .2s
    transform scale(0) translate(-50%, calc(100% + 20px))
    display block
    opacity 0
  +above($break-point--curator-inbox)
    left 0
    transform translate(65%, 0px)
    &.off-canvas
      transform translate(65%, calc(100% + 20px))
  +below($break-point--curator-inbox)
    &.off-canvas
      opacity 0
      transition opacity .5s ease-in-out
  button
    padding-left 3em
    padding-right 3em
    font-size 0.85em
    font-weight 400

.back-to-list
  font-size 2.25em
  margin-right .35em
  color $primary
  cursor pointer
  transition .1s
  &:hover
    darken(@color, 10%)
  &:active
    transform scale(1.2)
  +above($break-point--curator-inbox)
    display none

.curator-events
  +below($break-point--curator-inbox)
    .reactive-table-navigation
      padding-top 1em
      padding-bottom 1em
      margin-top 0
      margin-bottom 3em
      background $block-BG
      justify-content flex-end
      margin-right 1em
      .page-number
        max-width 65%
        margin-right 1em

.curator-inbox--warning
  top 50%
  left 50%
  centerPosition()
  min-width 300px
  padding 3em 4em
  border 2px solid $warning
  border-radius 3px
  text-align center
  h4
    font-size 1em
    margin-bottom 2em
    text-transform none
  i
    font-size 6em
    color $warning
    margin-bottom 25px
  .actions
    display flex
    flex-direction column
    align-items center
    button
      padding-left 2em
      padding-right 2em
      &:not(:last-of-type)
        margin-bottom 1em

table.associated-events
  width 100%
  tr
    border-bottom 8px solid transparent
  .controls
    width 100px
