.curator-source-details--table-wrapper
  .table
    &
    &.incident-table
      > tbody
        > tr
          > td
            &:nth-of-type(2)
              width 25%
            &:nth-of-type(3)
              width 25%
            &:nth-of-type(4)
              width 35%
          &:last-of-type
            &
            td
              border-bottom 0
    thead
      background lighten($border-primary-light, 50%)
      > tr > th
        border-bottom 2px solid darken($border-primary-light, 5%)

.curator-inbox-table
  border-radius 0
  margin-bottom 0
  color $primary
  max-width calc(100% + 1px)
  width calc(100% + 1px)
  border 0
  border-top 1px solid $border-primary-light
  border-bottom 1px solid $border-primary-light
  thead
    display none
  tr
    padding-left 7px
    padding-right 7px
    position relative
    &:hover
      background-color lighten($border-primary-light, 20%)
    &:last-of-type
      td
        border 0
    .curator-inbox-curated-row
      &::before
        content "\f058"
        font-family FontAwesome
        color $positive
    td
      border-color $border-primary-light
      &.title
        padding-left 0
      &:first-of-type
        width $page-padding
        text-align right
      &:nth-of-type(-n+2)
        display table-cell !important
        padding-top .5em
        padding-bottom .5em
    &.selected
      font-weight 600
      cursor default
      &:hover
        background @background
    .details-row
      position relative
      color $border-primary
  .title
    max-width 400px
