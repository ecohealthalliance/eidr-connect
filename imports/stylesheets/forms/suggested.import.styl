$warning-bg = lighten($warning, 90%)
$warning-border = darken($warning-bg, 12%)


.suggested-block
  content '\f0d0' // fa-magic | magic wand with pixie dust
  position absolute
  right .5em
  top .5em
  font(FontAwesome)
  color darken($warning-bg, 40%)

.suggested
  position relative
  &:not(.full-width)
    autofillBG()
    padding-top .75em
    padding-bottom .75em
  .tabs
    li.active
      autofillBG(false)
  &.full-width
    .tabs.tabs-secondary
      border-color $warning-border
      li
        > a
          border-color $warning-border
        &.active
          > a
            background darken($warning-bg, 8%)
    .tab-content
      background $warning-bg !important
      border-bottom-color $warning-border !important
  .form-control:last-of-type
  .select2-container--default
    margin-bottom .5em

  &:not(.with-tabs)
    &::after
      @extend .suggested-block
  &.with-tabs
    .tab-content
      position relative
      &:after
        @extend .suggested-block

.suggested-incidents
  .flex-reverse
    +below(3)
      flex-direction column

.suggested-minimal
  .input-group-addon
  input
  select
    background $warning-bg
    border-color darken($warning-border, 10%) !important // Overide bootstrap
    color $primary-dark

#suggestedIncidentModal
  #add-incident
    .control-label.featured
      border-bottom-width 1px
  .modal-body
    align-items stretch
  .modal-dialog
    width 90%
  .check-buttons
    margin-bottom 0
  .form-group:first-of-type
    border-top 0
  .form-group--full:last-of-type
    margin-bottom 1.5em
  .control-label
    &.featured
      border-bottom 1px solid darken($border-primary-light, 5%)
      align-items flex-start
      +above(3)
        align-items center
      +between(3, 4)
        flex-direction row
  .tabs-traditional
    margin 0 20px
  +above(4)
    .modal-dialog
      width calc(100% - 150px)
    .modal-header
      border-color $border-primary-m
    .modal-body
      padding 0
      display flex
      overflow hidden
    .annotated-content
    #add-incident
      flex 1 1 50%
      max-width 50%
      overflow-y scroll
      will-change transform
    #add-incident
    .annotated-content
      margin 0
      border 0
      border-right 1px solid $border-primary-m
    #add-incident
      label.featured
        margin 0
      .tabs-traditional
        margin-left -20px
        margin-right -20px
        width calc(100% + 40px)
      .incident-type-wrapper
        padding 10px 20px 15px 20px
        .form-group:first-of-type
          padding 0
      .form-group
        margin-left 0
        margin-right 0
        &:not(.form-groups)
          padding 0 20px
      .tab-content
        margin-left -20px
        margin-right -20px
    .snippet--text
      max-height none
    .control-label
      &.featured
        min-height 45px
        padding-top 0
        padding-bottom 0
        margin-top 0
        border-top 0
        display flex
        align-items center
        h5
          margin 0
