#suggested-articles
  padding-top 0
  padding-bottom 0
  position relative
  border-top-color lighten($border-primary, 25%)
  ul
    margin 0
  li
    padding .3em 20px
    border-bottom 1px solid darken($block-BG, 5%)
    color $primary
    cursor pointer
    &:last-of-type
      border 0
    &:hover
      background darken($block-BG, 3%)
    &.active
      background darken($block-BG, 3%)
      color $primary-dark
  .no-results
    margin-bottom 1.25em
    &::before
      font-size 200%

#event-source
  .time
    margin 1.5em
  .tab-content
    padding 20px
    border-top-width 1px
  .modal-body
    padding-bottom 0

#add-source
  .date-editing
    margin-bottom -11px
  .form-group
    p
      margin 0
  .modal-block
    .form-group
      margin-bottom 0
  .tabs
    margin-top 1em
    border-bottom 0
  .tab-pane
    textarea
      min-height 25vh
