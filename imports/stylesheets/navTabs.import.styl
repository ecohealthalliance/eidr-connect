.tabs-wrapper
  border-bottom 2px solid $primary

.tabs
  position relative
  display flex
  align-items stretch
  margin-bottom 0
  width 100%
  padding 0
  +above(2)
    flex-direction row
  +above(3)
    margin-top 40px
  +above(5)
    width 65%
    max-width $max-ui-width
    justify-content center
    margin-right auto
    margin-left auto

  > li
    display flex
    flex 1 1 auto
    justify-content center
    align-items center
    letter-spacing $letter-spacing
    border 0
    border-radius 0
    +above(4)
      margin 0 .5em

.tabs > li
  min-height 50px
  &:first-of-type
    margin-left 0
  &:hover
    background-color darken($primary-light, 3%)
  &.disabled
  &.disabled.active
    > a
      disableLink()
      color $disabled
      background none
      border-color $border-primary
    &:hover
      background none
  > a
    flex 1
    display flex
    align-self stretch
    align-items center
    justify-content center
    width 100%
    font-size 1.25em
    text-transform uppercase
    text-decoration none
    border 1px solid $border-primary
    border-bottom 0
    +above(2)
      font-size 1.25em
    +above(4)
      border-top-left-radius 4px
      border-top-right-radius 4px
    i
      font-size 150%
      margin-right 10px

.tabs > li > a
.tabs > li > a:hover
.tabs > li > a:focus
  color $primary

.tabs > li
.tabs > li.active
  > a
    &:focus
      background $focus-secondary
      border-color darken($secondary, 20%)
      color $primary-dark

.tabs > li.active
  > a
    color white
    cursor default
    &
    &:hover
      border-color $primary
      background-color $primary
    &:active
      color white

.tabs-secondary
  border-bottom 1px solid $border-primary
  > li
    position relative
    > a
      font-size 1em
      padding-top .35em
      padding-bottom .35em
    &.active
      > a
        &
        &:focus
        &:hover
        &:active
          background $block-BG
          border-color $border-primary
    &.with-info-tooltip
      &:after
        position absolute
        top .1em
        right .5em
        font-size .8em

.tabs-traditional
  margin 0
  width 100%
  padding 0 20px
  justify-content center
  +above(2)
    justify-content flex-start
  > li
    flex 1
    white-space nowrap
    background white
    margin-right .25em
    +above(2)
      flex 0 0 auto
    &:first-of-type
      border-top-left-radius 4px
    &:last-of-type
      border-top-right-radius 4px
      margin-right 0
    > a
      text-transform capitalize
      padding-left 2em
      padding-right 2em
      font-weight 600
      padding-top 1.2em
      padding-bottom 1.2em
      +above(2)
        padding-top .75em
        padding-bottom .75em
    &.active
      border-color $border-primary
      &:hover
        background @background
        border-color @border-color
      > a
        background lighten($border-primary, 30%)
        color $primary
        disableLink()

.tabs-modal-header
  > li
    background none
    &:hover
      background darken($border-primary-light, 5%)
    > a
      color $primary
      font-weight normal
    &.active
      background $border-primary-light
      border-color darken($border-primary, 10%)
      &:hover
        background @background
        border-color @border-color
      > a
        font-weight 600
        color $primary-dark

.tabs-grouped
  margin inherit 5%
  flex-direction column
  +above(2)
    flex-direction row
  +between(2,3)
    font-size .8em
  > li
    margin 0
    &:not(:last-of-type)
      a
        border-right 0
    a
      border-radius 0
      border-bottom 1px solid $border-primary
      &.active
        disableLink()
        background $primary
        color white
        border-color $primary
    &:last-of-type
      a
        border-right-width 0
        +above(5)
          border-right-width 1px
          border-top-right-radius 3px
          border-bottom-right-radius 3px
    &:first-of-type
      a
        border-left-width 0
        +above(5)
          border-left-width 1px
          border-top-left-radius 3px
          border-bottom-left-radius 3px
