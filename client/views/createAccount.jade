template(name="createAccount")
  .container-fluid
    .container.content-block
      h2 Create New Account
      form#add-account.space-top-2(novalidate)
        .form-group.admin-email
          label Email
            input.form-control(
              type='email'
              name='email'
              required
              data-parsley-class-handler=".admin-email")
        .form-group.admin-name
          label Name
            input.form-control(
              type='text'
              name='name'
              required
              data-parsley-class-handler=".admin-name")
        .form-group
          .checkbox
            label
              input(type="checkbox", name="admin")
              | Grant Admin Rights
        button.btn.btn-primary.space-top-2(type='submit') Add User
