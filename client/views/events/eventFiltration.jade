template(name="eventFiltration")
  .filtration--header
    h2 Filter

  section.filtration--property.type
    h3 Types
    .check-buttons.container-flex
      each typeProps
        .check-button
          input(
            type="checkbox"
            name="#{propPrex}#{this}"
            id="#{propPrex}#{this}"
            tabindex="-1")
          label(for="#{propPrex}#{this}" tabindex="0")=this

  section.filtration--property.status
    h3 Status
    .check-buttons.container-flex
      each statusProps
        .check-button
          input(
            type="checkbox"
            name="#{propPrex}#{this}"
            id="#{propPrex}#{this}"
            tabindex="-1")
          label(for="#{propPrex}#{this}" tabindex="0")=this

  section.filtration--property.other-properties
    h3 Other Properties
    .check-buttons.container-flex
      .check-button
        input(
          type="checkbox"
          name='#{propPrex}travelRelated'
          id='#{propPrex}travelRelated'
          tabindex="-1")
        label(for='#{propPrex}travelRelated' tabindex="0") Travel Related
