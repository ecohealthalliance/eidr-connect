template(name="eventFiltration")
  .filtration--header
    h2 Filter

  section.filtration--property.type
    h3 Types
    .check-buttons.container-flex
      each typeProps
        .check-button
          input(
            type="checkbox"
            name=this
            id=this
            value=this
            tabindex="-1")
          label(for=this tabindex="0")=this

  section.filtration--property.status
    h3 Status
    .check-buttons.container-flex
      each statusProps
        .check-button
          input(
            type="checkbox"
            name=this
            id=this
            value=this
            tabindex="-1")
          label(for=this tabindex="0")=this

  section.filtration--property.other-properties
    h3 Other Properties
    .check-buttons.container-flex
      .check-button
        input(
          type="checkbox"
          name='travelRelated'
          id='travelRelated'
          value='travelRelated'
          tabindex="-1")
        label(for='travelRelated' tabindex="0") Travel Related
